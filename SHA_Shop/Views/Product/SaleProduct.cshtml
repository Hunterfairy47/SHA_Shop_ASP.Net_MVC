@model IEnumerable<SHA_Shop.Models.SANPHAM>
@using SHA_Shop.Models;
@{ ViewBag.Title = "SaleProduct";
    Layout = "~/Views/Shared/_Layout.cshtml"; }

@foreach (var item in Model)
{
<div class="product__discount">
    <div class="section-title product__discount__title">
        <h2>Giảm giá</h2>
    </div>
    <div class="row">
        <div class="product__discount__slider owl-carousel">
            <div class="col-lg-4">
                <div class="product__discount__item">
                    <div class="product__discount__item__pic set-bg"
                         data-setbg="@Url.Content("~/Assets/User/img/product/" + item.Anh)">
                        <div class="product__discount__percent">-20%</div>
                        <ul class="product__item__pic__hover">
                            <li><a href="#"><i class="fa fa-heart"></i></a></li>
                            <li><a href="@Url.Action("AddShopCart", "ShopCart", new { @iMaSP = item.MaSP, @strURL = Request.Url.ToString()})"><i class="fa fa-shopping-cart"></i></a></li>
                        </ul>
                    </div>
                    <div class="product__discount__item__text">
                        <span>@item.TenSP</span>
                        <h5><a href="#">Raisin’n’nuts</a></h5>
                        <div class="product__item__price">@item.GiaSP <span>$36.00</span></div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>}
